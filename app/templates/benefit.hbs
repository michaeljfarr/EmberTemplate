<h2>My benefits</h2>
<br>
<div class="Table">
  <div class="Table-row Table-cell--desktop Sidebar u-sm-hidden u-md-hidden" style="padding-right: 20px;">
    {{#each benefit in benefits}}
      {{#link-to "benefit" benefit.id classNames="Button Button-full"}}
        {{benefit.type}}
      {{/link-to}}
      <br>
      <br>
    {{/each}}
  </div>
  <div class="Table-row Table-cell--desktop">
    <h3>{{model.type}}</h3>
    <span class="u-cf">
      <a href="" class="u-floatRight">
        See next benefit
      </a>
    </span>
    <div class="BenefitView u-cf">
      <span class="BenefitView-day">To bank on {{benefit.nextPaymentDate}}</span>
      <span class="BenefitView-amount u-floatRight"><b>${{benefit.nextPaymentAmmount}}</b></span>
    </div>
    <br>
    <br>
